<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Ncp.CleanDDD.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Ncp.CleanDDD.Avalonia.Views.RolesView"
             x:DataType="vm:RolesViewModel">

    <Design.DataContext>
        <vm:RolesViewModel/>
    </Design.DataContext>

    <Grid Background="#f8f9fa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 现代化页面标题 -->
        <Border Grid.Row="0" Background="#8b5cf6" Padding="30,20" Margin="0,0,0,15" CornerRadius="0,0,16,16">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Border Background="White" CornerRadius="12" Padding="12">
                    <TextBlock Text="👥" FontSize="20"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="角色管理" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding Roles.Count, StringFormat='共 {0} 个角色'}" 
                               FontSize="16" 
                               Foreground="#e2e8f0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 现代化搜索和操作栏 -->
        <Border Grid.Row="1" Background="White" Padding="25,20" Margin="0,0,0,15" CornerRadius="12" BorderBrush="#e2e8f0" BorderThickness="1" BoxShadow="0 4 12 0 #0A000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 现代化搜索区域 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding SearchName}" 
                                 Watermark="搜索角色名称" 
                                 Width="250" 
                                 Padding="16,12"
                                 FontSize="14"
                                 BorderBrush="#e2e8f0"
                                 BorderThickness="2"
                                 CornerRadius="8"
                                 Background="#f7fafc"/>
                    </StackPanel>
                    
                    <Button Command="{Binding SearchCommand}" 
                            Background="#8b5cf6" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🔍" FontSize="14"/>
                            <TextBlock Text="搜索"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding RefreshCommand}" 
                            Background="#6b7280" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🔄" FontSize="14"/>
                            <TextBlock Text="刷新"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- 现代化操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Command="{Binding CreateRoleCommand}" 
                            IsEnabled="{Binding CanCreateRole}"
                            Background="#10b981" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕" FontSize="14"/>
                            <TextBlock Text="新建角色"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 现代化角色列表 -->
        <Border Grid.Row="2" Background="White" CornerRadius="12" BorderBrush="#e2e8f0" BorderThickness="1" BoxShadow="0 4 12 0 #0A000000" Margin="0,0,0,15">
            <DataGrid ItemsSource="{Binding Roles}" 
                      IsReadOnly="True" 
                      AutoGenerateColumns="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Background="White"
                      BorderThickness="0"
                      RowBackground="White"
                      FontSize="14"
                      Padding="20">
            
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="选择" 
                                        Binding="{Binding IsSelected}" 
                                        Width="60"/>
                
                <DataGridTextColumn Header="角色名称" 
                                    Binding="{Binding Name}" 
                                    Width="150"/>
                
                <DataGridTextColumn Header="描述" 
                                    Binding="{Binding Description}" 
                                    Width="200"/>
                
                <DataGridTextColumn Header="状态" 
                                    Binding="{Binding IsActive}" 
                                    Width="80"/>
                
                <DataGridTextColumn Header="权限数量" 
                                    Binding="{Binding PermissionCodes.Count}" 
                                    Width="100"/>
                
                <DataGridTextColumn Header="创建时间" 
                                    Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" 
                                    Width="150"/>
                
                <DataGridTemplateColumn Header="操作" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <Button Command="{Binding $parent[DataGrid].DataContext.EditRoleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        IsEnabled="{Binding $parent[DataGrid].DataContext.CanEditRole, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Background="#8b5cf6" 
                                        Foreground="White" 
                                        Padding="10,6" 
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        CornerRadius="6">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="✏️" FontSize="12"/>
                                        <TextBlock Text="编辑"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Command="{Binding $parent[DataGrid].DataContext.DeleteRoleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                        CommandParameter="{Binding}"
                                        IsEnabled="{Binding $parent[DataGrid].DataContext.CanDeleteRole, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Background="#ef4444" 
                                        Foreground="White" 
                                        Padding="10,6" 
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        CornerRadius="6">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="🗑️" FontSize="12"/>
                                        <TextBlock Text="删除"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 现代化加载指示器 -->
        <Border Grid.Row="2" 
                Background="#80000000" 
                IsVisible="{Binding IsLoading}"
                CornerRadius="12">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="15">
                <TextBlock Text="⏳" 
                           FontSize="24" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="正在加载角色数据..." 
                           FontSize="16" 
                           FontWeight="Medium"
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
