<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Ncp.CleanDDD.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Ncp.CleanDDD.Avalonia.Views.OrganizationUnitsView"
             x:DataType="vm:OrganizationUnitsViewModel">

    <Design.DataContext>
        <vm:OrganizationUnitsViewModel/>
    </Design.DataContext>

    <Grid Background="#f8f9fa">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- 现代化左侧：组织架构树 -->
        <Border Grid.Column="0" Background="White" Margin="0,0,10,0" CornerRadius="12" BorderBrush="#e2e8f0" BorderThickness="1" BoxShadow="0 4 12 0 #0A000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 现代化树形结构标题 -->
                <Border Grid.Row="0" Background="#f59e0b" Padding="20,15" CornerRadius="12,12,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Border Background="White" CornerRadius="8" Padding="8">
                            <TextBlock Text="🏢" FontSize="16"/>
                        </Border>
                        <TextBlock Text="组织架构树" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- 现代化树形结构 -->
                <TreeView Grid.Row="1" 
                          ItemsSource="{Binding OrganizationTree}" 
                          Padding="20"
                          Background="White"
                          BorderThickness="0">
                    <TreeView.ItemTemplate>
                        <TreeDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Spacing="8" Margin="5">
                                <TextBlock Text="📁" FontSize="16"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold" 
                                               FontSize="14"
                                               Foreground="#2d3748"/>
                                    <TextBlock Text="{Binding IsActive, StringFormat='状态: {0}'}" 
                                               Foreground="#718096" 
                                               FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </TreeDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Border>

        <!-- 现代化右侧：组织架构列表 -->
        <Border Grid.Column="1" Background="White" Margin="10,0,0,0" CornerRadius="12" BorderBrush="#e2e8f0" BorderThickness="1" BoxShadow="0 4 12 0 #0A000000">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 现代化页面标题 -->
                <Border Grid.Row="0" Background="#f59e0b" Padding="25,20" CornerRadius="12,12,0,0">
                    <StackPanel Orientation="Horizontal" Spacing="15">
                        <Border Background="White" CornerRadius="12" Padding="12">
                            <TextBlock Text="🏢" FontSize="20"/>
                        </Border>
                        <StackPanel>
                            <TextBlock Text="组织架构管理" 
                                       FontSize="28" 
                                       FontWeight="SemiBold" 
                                       Foreground="White"/>
                            <TextBlock Text="{Binding OrganizationUnits.Count, StringFormat='共 {0} 个组织'}" 
                                       FontSize="16" 
                                       Foreground="#e2e8f0" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 现代化搜索和操作栏 -->
                <Border Grid.Row="1" Background="White" Padding="25,20" Margin="0,0,0,15" CornerRadius="0,0,12,12" BorderBrush="#e2e8f0" BorderThickness="0,1,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 现代化搜索区域 -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SearchName}" 
                                         Watermark="搜索组织名称" 
                                         Width="250" 
                                         Padding="16,12"
                                         FontSize="14"
                                         BorderBrush="#e2e8f0"
                                         BorderThickness="2"
                                         CornerRadius="8"
                                         Background="#f7fafc"/>
                            </StackPanel>
                            
                            <Button Command="{Binding SearchCommand}" 
                                    Background="#f59e0b" 
                                    Foreground="White" 
                                    Padding="20,12"
                                    CornerRadius="8"
                                    FontSize="14"
                                    FontWeight="SemiBold">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="🔍" FontSize="14"/>
                                    <TextBlock Text="搜索"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding RefreshCommand}" 
                                    Background="#6b7280" 
                                    Foreground="White" 
                                    Padding="20,12"
                                    CornerRadius="8"
                                    FontSize="14"
                                    FontWeight="SemiBold">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="🔄" FontSize="14"/>
                                    <TextBlock Text="刷新"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <!-- 现代化操作按钮 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                            <Button Command="{Binding CreateOrganizationUnitCommand}" 
                                    IsEnabled="{Binding CanCreateOrganizationUnit}"
                                    Background="#10b981" 
                                    Foreground="White" 
                                    Padding="20,12"
                                    CornerRadius="8"
                                    FontSize="14"
                                    FontWeight="SemiBold">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="➕" FontSize="14"/>
                                    <TextBlock Text="新建组织"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 现代化组织架构列表 -->
                <DataGrid Grid.Row="2" 
                          ItemsSource="{Binding OrganizationUnits}" 
                          IsReadOnly="True" 
                          AutoGenerateColumns="False"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderThickness="0"
                          RowBackground="White"
                          FontSize="14"
                          Padding="20"
                          Margin="0,0,0,15">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="名称" 
                                            Binding="{Binding Name}" 
                                            Width="150"/>
                        
                        <DataGridTextColumn Header="描述" 
                                            Binding="{Binding Description}" 
                                            Width="200"/>
                        
                        <DataGridTextColumn Header="排序" 
                                            Binding="{Binding SortOrder}" 
                                            Width="80"/>
                        
                        <DataGridTextColumn Header="状态" 
                                            Binding="{Binding IsActive}" 
                                            Width="80"/>
                        
                        <DataGridTextColumn Header="创建时间" 
                                            Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" 
                                            Width="150"/>
                        
                        <DataGridTemplateColumn Header="操作" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <Button Command="{Binding $parent[DataGrid].DataContext.EditOrganizationUnitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding $parent[DataGrid].DataContext.CanEditOrganizationUnit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Background="#f59e0b" 
                                                Foreground="White" 
                                                Padding="10,6" 
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                CornerRadius="6">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="✏️" FontSize="12"/>
                                                <TextBlock Text="编辑"/>
                                            </StackPanel>
                                        </Button>
                                        
                                        <Button Command="{Binding $parent[DataGrid].DataContext.DeleteOrganizationUnitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding $parent[DataGrid].DataContext.CanDeleteOrganizationUnit, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Background="#ef4444" 
                                                Foreground="White" 
                                                Padding="10,6" 
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                CornerRadius="6">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="🗑️" FontSize="12"/>
                                                <TextBlock Text="删除"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 加载指示器 -->
                <Border Grid.Row="2" 
                        Background="#80000000" 
                        IsVisible="{Binding IsLoading}">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                        <TextBlock Text="加载中..." 
                                   FontSize="16" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>

</UserControl>
