<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Ncp.CleanDDD.Avalonia.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="Ncp.CleanDDD.Avalonia.Views.UsersView"
             x:DataType="vm:UsersViewModel">
    
    <UserControl.Resources>
        <!-- 状态背景色转换器 -->
        <vm:StatusToBackgroundConverter x:Key="StatusToBackgroundConverter"/>
        <!-- 状态图标转换器 -->
        <vm:StatusToIconConverter x:Key="StatusToIconConverter"/>
    </UserControl.Resources>

    <Design.DataContext>
        <vm:UsersViewModel/>
    </Design.DataContext>

    <Grid Background="#f8f9fa">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 现代化页面标题 -->
        <Border Grid.Row="0" Background="#667eea" Padding="30,20" Margin="0,0,0,15" CornerRadius="0,0,16,16">
            <StackPanel Orientation="Horizontal" Spacing="15">
                <Border Background="White" CornerRadius="12" Padding="12">
                    <TextBlock Text="👥" FontSize="20"/>
                </Border>
                <StackPanel>
                    <TextBlock Text="用户管理" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding TotalCount, StringFormat='共 {0} 个用户'}" 
                               FontSize="16" 
                               Foreground="#e2e8f0" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 现代化搜索和操作栏 -->
        <Border Grid.Row="1" Background="White" Padding="25,20" Margin="0,0,0,15" CornerRadius="12" BorderBrush="#e2e8f0" BorderThickness="1" BoxShadow="0 4 12 0 #0A000000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 现代化搜索区域 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding SearchKeyword}" 
                                 Watermark="搜索用户名或邮箱" 
                                 Width="250" 
                                 Padding="16,12"
                                 FontSize="14"
                                 BorderBrush="#e2e8f0"
                                 BorderThickness="2"
                                 CornerRadius="8"
                                 Background="#f7fafc"/>
                    </StackPanel>
                    
                    <ComboBox SelectedItem="{Binding StatusFilter}" 
                              Width="140" 
                              Padding="16,12"
                              FontSize="14"
                              BorderBrush="#e2e8f0"
                              BorderThickness="2"
                              CornerRadius="8"
                              Background="#f7fafc">
                        <ComboBoxItem Content="全部状态" Tag="{x:Null}"/>
                        <ComboBoxItem Content="启用" Tag="1"/>
                        <ComboBoxItem Content="禁用" Tag="0"/>
                    </ComboBox>
                    
                    <Button Command="{Binding SearchCommand}" 
                            Background="#667eea" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🔍" FontSize="14"/>
                            <TextBlock Text="搜索"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding RefreshCommand}" 
                            Background="#6b7280" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🔄" FontSize="14"/>
                            <TextBlock Text="刷新"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                
                <!-- 现代化操作按钮 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                    <Button Command="{Binding CreateUserCommand}" 
                            IsEnabled="{Binding CanCreateUser}"
                            Background="#10b981" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="➕" FontSize="14"/>
                            <TextBlock Text="新建用户"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Command="{Binding BatchDeleteCommand}" 
                            IsEnabled="{Binding CanDeleteUser}"
                            Background="#ef4444" 
                            Foreground="White" 
                            Padding="20,12"
                            CornerRadius="8"
                            FontSize="14"
                            FontWeight="SemiBold">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="🗑️" FontSize="14"/>
                            <TextBlock Text="批量删除"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
		
        </Border>

	

		<!-- 现代化用户列表 -->
        <Border Grid.Row="2" Background="White" CornerRadius="16" BorderBrush="#e2e8f0" BorderThickness="1" BoxShadow="0 8 25 0 #0F000000" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 列表标题栏 -->
                <Border Grid.Row="0" Background="#f8fafc" CornerRadius="16,16,0,0" BorderBrush="#e2e8f0" BorderThickness="0,0,0,1" Padding="25,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                            <Border Background="#667eea" CornerRadius="8" Padding="8">
                                <TextBlock Text="👥" FontSize="16" Foreground="White"/>
                            </Border>
                            <StackPanel>
                                <TextBlock Text="用户列表" FontSize="18" FontWeight="SemiBold" Foreground="#1f2937"/>
                                <TextBlock Text="{Binding Users.Count, StringFormat='共 {0} 条记录'}" FontSize="14" Foreground="#6b7280"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                            <Button Command="{Binding SelectAllCommand}" 
                                    Background="#f3f4f6" 
                                    Foreground="#374151" 
                                    Padding="12,8"
                                    CornerRadius="6"
                                    FontSize="12"
                                    FontWeight="Medium">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="☑️" FontSize="12"/>
                                    <TextBlock Text="全选"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Command="{Binding ClearSelectionCommand}" 
                                    Background="#f3f4f6" 
                                    Foreground="#374151" 
                                    Padding="12,8"
                                    CornerRadius="6"
                                    FontSize="12"
                                    FontWeight="Medium">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="☐" FontSize="12"/>
                                    <TextBlock Text="清空"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 数据表格 -->
                <ScrollViewer Grid.Row="1" 
                              HorizontalScrollBarVisibility="Auto" 
                              VerticalScrollBarVisibility="Auto">
                    <DataGrid ItemsSource="{Binding Users}" 
                              IsReadOnly="True" 
                              AutoGenerateColumns="False"
                              GridLinesVisibility="None"
                              HeadersVisibility="Column"
                              Background="White"
                              BorderThickness="0"
                              RowBackground="White"
                              FontSize="14"
                              Padding="0"
                              CanUserReorderColumns="True"
                              CanUserResizeColumns="True"
                              CanUserSortColumns="True"
                              SelectionMode="Extended"
                          
                              ColumnHeaderHeight="50"
                              RowHeight="60">
                    
            
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="选择" 
                                                Binding="{Binding IsSelected}" 
                                                Width="120"
                                                CanUserSort="False"/>
                        
                        <DataGridTextColumn Header="👤 用户名" 
                                            Binding="{Binding Name}" 
                                            Width="120"
                                            FontWeight="SemiBold"/>
                        
                        <DataGridTextColumn Header="📝 真实姓名" 
                                            Binding="{Binding RealName}" 
                                            Width="120"/>
                        
                        <DataGridTextColumn Header="📧 邮箱" 
                                            Binding="{Binding Email}" 
                                            Width="200"/>
                        
                        <DataGridTextColumn Header="📱 手机号" 
                                            Binding="{Binding Phone}" 
                                            Width="120"/>
                        
                        <DataGridTemplateColumn Header="状态" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12" 
                                            Padding="8,4" 
                                            HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Background="{Binding Status, Converter={StaticResource StatusToBackgroundConverter}}">
                                        <StackPanel Orientation="Horizontal" 
                                                   Spacing="4" 
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Status, Converter={StaticResource StatusToIconConverter}}" 
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="🏢 组织架构" 
                                            Binding="{Binding OrganizationUnitName}" 
                                            Width="140"/>
                        
                        <DataGridTextColumn Header="📅 创建时间" 
                                            Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd HH:mm'}" 
                                            Width="140"/>
                        
                        <DataGridTemplateColumn Header="⚙️ 操作"  CanUserSort="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                        <Button Command="{Binding $parent[DataGrid].DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding $parent[DataGrid].DataContext.CanEditUser, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Background="#3b82f6" 
                                                Foreground="White" 
                                                Padding="12,8" 
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                CornerRadius="8"
                                                MinWidth="60">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="✏️" FontSize="12"/>
                                                <TextBlock Text="编辑"/>
                                            </StackPanel>
                                        </Button>
                                        
                                        <Button Command="{Binding $parent[DataGrid].DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding $parent[DataGrid].DataContext.CanDeleteUser, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Background="#ef4444" 
                                                Foreground="White" 
                                                Padding="12,8" 
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                CornerRadius="8"
                                                MinWidth="60">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="🗑️" FontSize="12"/>
                                                <TextBlock Text="删除"/>
                                            </StackPanel>
                                        </Button>
                                        
                                        <Button Command="{Binding $parent[DataGrid].DataContext.ResetPasswordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                IsEnabled="{Binding $parent[DataGrid].DataContext.CanResetPassword, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                Background="#f59e0b" 
                                                Foreground="White" 
                                                Padding="12,8" 
                                                FontSize="12"
                                                FontWeight="SemiBold"
                                                CornerRadius="8"
                                                MinWidth="60">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <TextBlock Text="🔑" FontSize="12"/>
                                                <TextBlock Text="重置"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- 现代化加载指示器 -->
        <Border Grid.Row="2" 
                Background="#80000000" 
                IsVisible="{Binding IsLoading}"
                CornerRadius="16">
            <Border Background="White" 
                    CornerRadius="16" 
                    Padding="40,30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    BoxShadow="0 20 40 0 #1A000000">
                <StackPanel HorizontalAlignment="Center" 
                            VerticalAlignment="Center"
                            Spacing="20">
                    <!-- 旋转加载动画 -->
                    <Border Background="#667eea" 
                            CornerRadius="50" 
                            Width="60" 
                            Height="60"
                            HorizontalAlignment="Center">
                        <TextBlock Text="⏳" 
                                   FontSize="24" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    
                    <StackPanel Spacing="8">
                        <TextBlock Text="正在加载用户数据..." 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="#1f2937" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="请稍候..." 
                                   FontSize="14" 
                                   Foreground="#6b7280"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>

</UserControl>
